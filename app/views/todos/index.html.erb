<div class="container">
  <div class="page-header">
    <h1>代辦事項
    <small>Therefore do not worry about tomorrow, for tomorrow will worry about itself.
    </small>
  </h1>
  </div>



  <table class="table table-striped table-condensed table-hover">
    <tr>
        <td>狀態</td>
        <td>事項</td>
        <td>到期日</td>
        <td>查看細節</td>
        <td>編輯</td>
        <td>刪除</td>
    </tr>
    <% @todos.each do |todo| %>        
      <tr>
        <% if todo.completed %>
          <td>
            <%= link_to complete_todo_path(todo), method: :patch do %>
              <span style="opacity: 0.4;" class="glyphicon glyphicon-ok"></span>
            <% end %>
          </td>
        <% else %>
          <td>
            <%= link_to complete_todo_path(todo), method: :patch do %>
              <span class="glyphicon glyphicon-ok"></span>
            <% end %>
          </td>
        <% end %>
        <td><%= todo.title %></td>
        <td><%= todo.due_date %></td>
        <td><%= link_to 'Show', todo_path(todo) %></td>
        <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
        <% if Time.now.to_date <= todo.due_date %>
          <td><%= link_to 'Destroy', todo_path(todo), method: :delete, data:{ confirm: "Are you sure?" } %></td>
        <% else %>
          <td>expired</td>
        <% end %>
      </tr>  
    <% end %>
  </table>

  <%= link_to 'New Todo', new_todo_path %>
</div>
